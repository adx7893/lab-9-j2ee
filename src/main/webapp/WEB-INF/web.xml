<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" id="WebApp_ID" version="6.0">
    <display-name>Task Management</display-name>

    <servlet>
        <servlet-name>TaskController</servlet-name>
        <servlet-class>TaskController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TaskController</servlet-name>
        <url-pattern>/TaskController</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>TaskController?action=viewAll</welcome-file>
    </welcome-file-list>
</web-app>
